<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ink.whi.service.statistics.repo.mapper.RequestCountMapper">

    <select id="getPvCount" resultType="ink.whi.web.admin.statistics.vo.StatisticsDayVO">
        select sum(cnt) as count, date
        from request_count
        group by date
        order by date desc
        limit #{day}
    </select>
    <select id="getUvCount" resultType="ink.whi.web.admin.statistics.vo.StatisticsDayVO">
        select count(*) as count, date
        from request_count
        group by date
        order by date desc
        limit #{day}
    </select>
</mapper>